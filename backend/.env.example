# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="LitXplore"

# Environment & Deployment Settings
# Set PRODUCTION=true and ENV=production for production deployments
PRODUCTION=false
ENV=dev

# CORS Settings
# IMPORTANT: In production, set this to your actual frontend URLs only
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS","PATCH"]
CORS_ALLOW_HEADERS=["Authorization","Content-Type","Accept","Origin"]

# Gemini API Settings (Required for embeddings and LLM)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API Key (Optional - deprecated, no longer used)
# OPENAI_API_KEY=your-openai-api-key

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional-password

# Rate Limiting
RATE_LIMIT_PER_DAY=100

# LangChain Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.75
MAX_PAPERS=10

# ============================================
# CLERK AUTHENTICATION SETTINGS
# ============================================
# Get these from your Clerk Dashboard: https://dashboard.clerk.com

# Clerk Issuer URL (your Clerk frontend API URL)
# Format: https://<your-clerk-id>.clerk.accounts.dev OR your custom domain
CLERK_ISSUER=https://your-clerk-id.clerk.accounts.dev

# Clerk Frontend API (same as issuer for most setups)
CLERK_FRONTEND_API=https://your-clerk-id.clerk.accounts.dev

# Clerk Secret Key (from Clerk Dashboard > API Keys)
# SECURITY: Never commit this value, keep it secret!
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxx

# Clerk Publishable Key (from Clerk Dashboard > API Keys)
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# Clerk JWKS URL (for JWT verification)
# Format: https://<your-clerk-id>.clerk.accounts.dev/.well-known/jwks.json
CLERK_JWKS_URL=https://your-clerk-id.clerk.accounts.dev/.well-known/jwks.json

# JWT Algorithm (RS256 is standard for Clerk)
JWT_ALGORITHM=RS256

# Clerk Webhook Secret (REQUIRED in production)
# Get this from Clerk Dashboard > Webhooks when creating a webhook endpoint
# Without this, anyone can forge webhook payloads!
# CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Authorized Parties (azp) - Frontend URLs that can use tokens with this backend
# SECURITY: In production, set this to your actual frontend URLs
# Example: ["https://litxplore.com","https://www.litxplore.com"]
CLERK_AUTHORIZED_PARTIES=[]