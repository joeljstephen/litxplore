# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="LitXplore"

# CORS Settings
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Gemini API Settings (Required for embeddings and LLM)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API Key (Optional - deprecated, no longer used)
# OPENAI_API_KEY=your-openai-api-key

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional-password

# Rate Limiting
RATE_LIMIT_PER_DAY=100

# LangChain Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.75
MAX_PAPERS=10 